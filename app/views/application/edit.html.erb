<div class="editg-container section-container">
  <div class="section-header">
    <h2 class="editg-header">Edit Game</h2>
  </div>
  <div class="section-content">
    <form action="/game/update/<%=@game.id%>">
      <div class="form-input">
        <p>Upload your image to <a href="http://postimage.org/">Post Image</a> and paste the direct url here:</p>
        <label>Thumbnail Image Url</label>
        <input type="text" name="img_url" value="<%=@game.img_url%>">
      </div>
      <input type="submit" class="button-1" value="Submit">
    </form>
    <a class="delete-game" href="/game/destroy/<%=@game.id%>">Delete Game</a>
  </div>
</div>
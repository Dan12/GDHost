<div class="section-header">
    <h1><%=@user.username%></h1>
</div>
<%if @user.id == session[:user_id]%>
    <a href="/users/edit/<%=@user.id%>">Edit Profile</a>
    <br>
    <br>
<%end%>
<h2>Games:</h2>
<% @user.games.reverse.each do |g|%>
    <div id="game_container">
        <p id="game_name">
            <a href="/game/<%=g.id%>"><%=g.name%></a>
            <span> by </span>
            <a href="/users/view/<%=User.find_by(id: g.user_id.to_s).id%>"><%=User.find_by(id: g.user_id).username%></a>
        </p>
        <div id="img_container">
            <img src="<%=g.img_url%>" width="300px" height="300px"></img>
            <div id="img_cover"></div>
        </div>
    </div>
<% end %>